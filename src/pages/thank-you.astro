---
import BaseLayout from "../layouts/BaseLayout.astro";
import { mobileTiresBrand } from "../brands";

const title = "Thank You | Queens Auto Service";
const description =
    "Your appointment is confirmed. We look forward to seeing you!";
---

<BaseLayout title={title} description={description} brand={mobileTiresBrand}>
    <script slot="head" is:inline>
        // Google Tag Manager
        (function (w, d, s, l, i) {
            w[l] = w[l] || [];
            w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
            var f = d.getElementsByTagName(s)[0],
                j = d.createElement(s),
                dl = l != "dataLayer" ? "&l=" + l : "";
            j.async = true;
            j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
            f.parentNode.insertBefore(j, f);
        })(window, document, "script", "dataLayer", "GTM-KMB6CG6B");
    </script>

    <noscript slot="head">
        <iframe
            src="https://www.googletagmanager.com/ns.html?id=GTM-KMB6CG6B"
            height="0"
            width="0"
            style="display:none;visibility:hidden"></iframe>
    </noscript>

    <!-- Confetti Script -->
    <script
        src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.9.2/dist/confetti.browser.min.js"
        is:inline></script>

    <style is:global>
        .btn-gradient {
            background: linear-gradient(90deg, #22d3ee 0%, #3b82f6 100%);
        }

        @keyframes gradient-border-anim {
            0% {
                border-color: #22d3ee;
            }
            50% {
                border-color: #3b82f6;
            }
            100% {
                border-color: #22d3ee;
            }
        }
        .animated-gradient-border {
            animation: gradient-border-anim 3s ease-in-out infinite;
        }

        @keyframes pulse-custom {
            0%,
            100% {
                transform: scale(1);
                box-shadow: 0 0 0 0 rgba(34, 211, 238, 0.4);
            }
            50% {
                transform: scale(1.02);
                box-shadow: 0 0 0 10px rgba(34, 211, 238, 0);
            }
        }
        .animate-pulse-slow {
            animation: pulse-custom 2s infinite;
        }
    </style>

    <div class="relative z-10 min-h-[80vh] flex flex-col pt-32 pb-20">
        <main class="flex-grow flex items-center">
            <div
                class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center w-full"
            >
                <!-- Success Icon -->
                <div
                    class="w-24 h-24 mx-auto bg-green-500/10 border-2 border-green-500 rounded-full flex items-center justify-center mb-8"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-12 h-12 text-green-500"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="3"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path d="M20 6 9 17l-5-5"></path></svg
                    >
                </div>

                <h1
                    class="text-4xl md:text-6xl font-black text-queens-primary dark:text-white mb-4 uppercase tracking-tight"
                    data-translate-key="thankYouTitle"
                >
                    Appointment Confirmed, <span
                        id="user-name"
                        class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent"
                        >Guest</span
                    >!
                </h1>

                <!-- Coupon Container -->
                <div
                    id="coupon-container"
                    class="mt-8 p-8 bg-white dark:bg-slate-900 shadow-2xl rounded-3xl animated-gradient-border border-2 border-cyan-400 max-w-md mx-auto hidden relative overflow-hidden"
                >
                    <!-- Shimmer bg effect -->
                    <div
                        class="absolute inset-0 bg-gradient-to-tr from-cyan-500/10 to-transparent pointer-events-none"
                    >
                    </div>

                    <p
                        class="text-lg font-medium text-gray-600 dark:text-slate-300 relative z-10"
                        data-translate-key="couponCodeText"
                    >
                        Your savings code is:
                    </p>
                    <div
                        class="flex items-center justify-center gap-4 mt-3 relative z-10"
                    >
                        <p
                            id="coupon-code-display"
                            class="text-4xl md:text-5xl font-black text-cyan-500 dark:text-cyan-300 tracking-wider"
                        >
                            <!-- JS will insert code here -->
                        </p>
                        <button
                            id="copy-coupon-btn"
                            class="p-2.5 bg-gray-100 dark:bg-white/10 rounded-xl text-gray-600 dark:text-slate-300 hover:text-cyan-500 dark:hover:text-white hover:bg-white dark:hover:bg-white/20 transition-all border border-transparent hover:border-cyan-500/30"
                            aria-label="Copy coupon code"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="w-5 h-5"
                                ><rect
                                    width="8"
                                    height="4"
                                    x="8"
                                    y="2"
                                    rx="1"
                                    ry="1"></rect><path
                                    d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"
                                ></path><path
                                    d="M9 12a3 3 0 1 0 6 0 3 3 0 1 0-6 0"
                                ></path></svg
                            >
                        </button>
                    </div>
                    <p
                        id="copy-feedback"
                        class="text-sm font-bold text-green-500 h-5 mt-3 transition-opacity opacity-0"
                        data-translate-key="copiedText"
                    >
                        Copied to clipboard!
                    </p>
                </div>

                <p
                    class="mt-6 text-xl text-gray-600 dark:text-slate-300 max-w-2xl mx-auto leading-relaxed"
                    data-translate-key="confirmationText"
                >
                    Your spot is saved! We've sent a confirmation to your email
                    and a text reminder to your phone.
                </p>

                <!-- Audio Player Button -->
                <div class="mt-10">
                    <button
                        id="play-audio-btn"
                        style="display: none;"
                        class="animate-pulse-slow inline-flex items-center gap-4 px-10 py-5 btn-gradient text-white text-xl font-bold rounded-full shadow-2xl shadow-cyan-500/40 hover:scale-105 transition-all duration-300 group"
                    >
                        <div
                            class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center group-hover:bg-white/30 transition-colors"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="3"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="w-5 h-5 fill-current"
                                ><polygon points="5 3 19 12 5 21 5 3"
                                ></polygon></svg
                            >
                        </div>
                        <span id="play-audio-text">Play a special message</span>
                    </button>
                </div>

                <p
                    id="vehicle-info"
                    class="mt-4 text-lg font-medium text-gray-500 dark:text-slate-400 italic"
                >
                </p>

                <!-- Confirmation Summary -->
                <div
                    id="confirmation-summary"
                    class="text-left bg-gray-50 dark:bg-white/5 p-8 rounded-3xl border border-gray-200 dark:border-white/10 my-10 space-y-4 max-w-md mx-auto shadow-sm"
                >
                    <div
                        class="flex items-start gap-4 pb-4 border-b border-gray-200 dark:border-white/10"
                    >
                        <div
                            class="w-10 h-10 rounded-full bg-cyan-100 dark:bg-cyan-500/20 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="w-5 h-5 text-cyan-600 dark:text-cyan-400"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                                ></path>
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M9 12l2 2 4-4"></path>
                            </svg>
                        </div>
                        <div>
                            <p
                                class="text-xs uppercase tracking-widest font-bold text-gray-400 dark:text-slate-500 mb-0.5"
                                data-translate-key="summaryService"
                            >
                                Service
                            </p>
                            <span
                                id="summary-service"
                                class="font-bold text-gray-900 dark:text-white"
                            ></span>
                        </div>
                    </div>

                    <div
                        class="flex items-start gap-4 pb-4 border-b border-gray-200 dark:border-white/10"
                    >
                        <div
                            class="w-10 h-10 rounded-full bg-blue-100 dark:bg-blue-500/20 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="w-5 h-5 text-blue-600 dark:text-blue-400"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <p
                                class="text-xs uppercase tracking-widest font-bold text-gray-400 dark:text-slate-500 mb-0.5"
                                data-translate-key="summaryDateTime"
                            >
                                Date & Time
                            </p>
                            <span
                                id="summary-datetime"
                                class="font-bold text-gray-900 dark:text-white"
                            ></span>
                        </div>
                    </div>

                    <div class="flex items-start gap-4">
                        <div
                            class="w-10 h-10 rounded-full bg-gray-100 dark:bg-white/10 flex items-center justify-center flex-shrink-0"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="w-5 h-5 text-gray-600 dark:text-gray-400"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                ></path>
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                        </div>
                        <div>
                            <p
                                class="text-xs uppercase tracking-widest font-bold text-gray-400 dark:text-slate-500 mb-0.5"
                                data-translate-key="summaryLocation"
                            >
                                Location
                            </p>
                            <span
                                class="font-bold text-gray-900 dark:text-white"
                                data-translate-key="locationName"
                                >Queens Auto â€” Elgin</span
                            >
                        </div>
                    </div>
                </div>

                <div
                    class="mt-16 p-10 rounded-[2rem] border border-gray-200 dark:border-white/10 bg-white dark:bg-white/5 shadow-xl text-left"
                >
                    <h2
                        class="text-3xl font-black text-queens-primary dark:text-white uppercase tracking-tight"
                        data-translate-key="nextStepsTitle"
                    >
                        What Happens Next?
                    </h2>
                    <ul class="mt-8 space-y-6">
                        <li class="flex items-start gap-4">
                            <div
                                class="w-8 h-8 rounded-full bg-cyan-500 text-white flex items-center justify-center font-black flex-shrink-0"
                            >
                                1
                            </div>
                            <p
                                class="text-lg text-gray-600 dark:text-slate-300"
                                data-translate-key="step1"
                            >
                                <strong>Check your text/email:</strong> We've sent
                                a confirmation with your details.
                            </p>
                        </li>
                        <li class="flex items-start gap-4">
                            <div
                                class="w-8 h-8 rounded-full bg-cyan-500 text-white flex items-center justify-center font-black flex-shrink-0"
                            >
                                2
                            </div>
                            <p
                                class="text-lg text-gray-600 dark:text-slate-300"
                                data-translate-key="step2"
                            >
                                <strong>We'll call to confirm:</strong> A team member
                                will call you shortly to confirm everything.
                            </p>
                        </li>
                        <li class="flex items-start gap-4">
                            <div
                                class="w-8 h-8 rounded-full bg-cyan-500 text-white flex items-center justify-center font-black flex-shrink-0"
                            >
                                3
                            </div>
                            <p
                                class="text-lg text-gray-600 dark:text-slate-300"
                                data-translate-key="step3"
                            >
                                <strong>Come on by:</strong> Head to the shop at your
                                scheduled time. We'll be ready for you!
                            </p>
                        </li>
                    </ul>
                </div>

                <div class="mt-16 grid md:grid-cols-2 gap-8 mb-20">
                    <div
                        class="p-8 rounded-[2rem] border border-gray-200 dark:border-white/10 bg-gray-50 dark:bg-white/5 transition-transform hover:-translate-y-1"
                    >
                        <h3
                            class="text-xl font-black text-queens-primary dark:text-white uppercase tracking-tight"
                            data-translate-key="needHelpTitle"
                        >
                            Need to Reschedule?
                        </h3>
                        <p
                            class="text-gray-600 dark:text-slate-400 mt-3 mb-6"
                            data-translate-key="needHelpBody"
                        >
                            No problem. Give us a call and we'll find a better
                            time for you.
                        </p>
                        <a
                            href="tel:+12246353000"
                            class="btn-gradient inline-flex items-center justify-center px-8 py-3 text-white font-bold rounded-full shadow-lg shadow-cyan-500/30 hover:shadow-cyan-500/50 transition-all"
                        >
                            (224) 635-3000
                        </a>
                    </div>
                    <div
                        class="p-8 rounded-[2rem] border border-gray-200 dark:border-white/10 bg-gray-50 dark:bg-white/5 transition-transform hover:-translate-y-1"
                    >
                        <h3
                            class="text-xl font-black text-queens-primary dark:text-white uppercase tracking-tight"
                            data-translate-key="findUsTitle"
                        >
                            Where to Find Us
                        </h3>
                        <p
                            class="text-gray-600 dark:text-slate-400 mt-3 mb-6"
                            data-translate-key="findUsBody"
                        >
                            1303 Dundee Ave, Elgin, IL 60120
                        </p>
                        <a
                            href="https://maps.google.com/?q=Queens+Auto+Service+1303+Dundee+Ave+Elgin+IL"
                            target="_blank"
                            class="bg-gray-200 dark:bg-white/10 text-gray-900 dark:text-white inline-flex items-center justify-center px-8 py-3 font-bold rounded-full hover:bg-gray-300 dark:hover:bg-white/20 transition-all"
                        >
                            Get Directions
                        </a>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script is:inline>
        const initThankYouPage = () => {
            function populateDynamicContent() {
                const params = new URLSearchParams(window.location.search);
                const firstName = params.get("first_name") || "Guest";
                const audioUrl = sessionStorage.getItem("customAudioUrl");
                const couponCode = sessionStorage.getItem("userCouponCode");
                const date = params.get("date");
                const time = params.get("time");
                const carYear = params.get("carYear");
                const carMake = params.get("carMake");
                const carModel = params.get("carModel");
                const symptom = params.get("symptom") || "Auto Repair Service";

                // --- GTM Conversion Event ---
                const transactionId = `txn_${new Date().getTime()}`;
                window.dataLayer = window.dataLayer || [];
                window.dataLayer.push({
                    event: "purchase",
                    ecommerce: {
                        transaction_id: transactionId,
                        value: 100.0,
                        currency: "USD",
                        items: [
                            {
                                item_name: symptom,
                                item_id: "REPAIR_SERVICE_LEAD",
                                price: "100.00",
                                quantity: "1",
                            },
                        ],
                    },
                    user_data: {
                        email: params.get("email"),
                        phone_number: params.get("phone"),
                        address: {
                            first_name: firstName,
                            last_name: params.get("last_name") || "",
                        },
                    },
                });

                const userNameEl = document.getElementById("user-name");
                if (userNameEl) {
                    userNameEl.textContent = firstName;
                }

                // === DISPLAY COUPON CODE ===
                const couponContainer =
                    document.getElementById("coupon-container");
                const couponDisplay = document.getElementById(
                    "coupon-code-display",
                );
                const copyBtn = document.getElementById("copy-coupon-btn");
                const copyFeedback = document.getElementById("copy-feedback");

                if (couponCode && couponContainer && couponDisplay) {
                    couponDisplay.textContent = couponCode;
                    couponContainer.classList.remove("hidden");

                    if (copyBtn && copyFeedback) {
                        copyBtn.onclick = () => {
                            const tempInput =
                                document.createElement("textarea");
                            tempInput.value = couponCode;
                            document.body.appendChild(tempInput);
                            tempInput.select();
                            try {
                                document.execCommand("copy");
                                copyFeedback.classList.remove("opacity-0");
                                setTimeout(() => {
                                    copyFeedback.classList.add("opacity-0");
                                }, 2000);
                            } catch (err) {
                                console.error("Failed to copy code: ", err);
                            }
                            document.body.removeChild(tempInput);
                        };
                    }
                }

                const vehicleInfoEl = document.getElementById("vehicle-info");
                if (carYear && carMake && carModel && vehicleInfoEl) {
                    const vehicleString = `${carYear} ${carMake} ${carModel}`;
                    vehicleInfoEl.innerHTML = `Your <strong>${vehicleString}</strong> is all set for its service.`;
                    vehicleInfoEl.style.display = "block";
                } else if (vehicleInfoEl) {
                    vehicleInfoEl.style.display = "none";
                }

                const summaryServiceEl =
                    document.getElementById("summary-service");
                if (summaryServiceEl) {
                    summaryServiceEl.textContent = symptom;
                }

                const summaryDateTimeEl =
                    document.getElementById("summary-datetime");
                if (date && time && summaryDateTimeEl) {
                    try {
                        const dateObj = new Date(date + "T00:00:00");
                        const options = {
                            weekday: "long",
                            year: "numeric",
                            month: "long",
                            day: "numeric",
                        };
                        const formattedDate = new Intl.DateTimeFormat(
                            "en-US",
                            options,
                        ).format(dateObj);
                        summaryDateTimeEl.textContent = `${formattedDate} at ${time}`;
                    } catch (e) {
                        summaryDateTimeEl.textContent = `${date} at ${time}`;
                    }
                }

                // --- Audio Player & Confetti Logic ---
                const playBtn = document.getElementById("play-audio-btn");
                const playBtnText = document.getElementById("play-audio-text");

                if (audioUrl && playBtn) {
                    playBtn.style.display = "inline-flex";
                    if (firstName !== "Guest" && playBtnText) {
                        playBtnText.textContent = `Message for ${firstName}`;
                    }

                    playBtn.onclick = () => {
                        if (playBtn.disabled) return;

                        celebrate();

                        const audio = new Audio(audioUrl);
                        audio
                            .play()
                            .catch((e) =>
                                console.error("Audio play failed:", e),
                            );

                        playBtn.disabled = true;
                        playBtn.classList.remove("animate-pulse-slow");
                        if (playBtnText) playBtnText.textContent = "Playing...";
                        audio.addEventListener("ended", () => {
                            if (playBtnText)
                                playBtnText.textContent = "Play Message Again";
                            playBtn.disabled = false;
                            playBtn.classList.add("animate-pulse-slow");
                        });
                    };
                }
            }

            function celebrate() {
                if (typeof confetti === "function") {
                    const colors = ["#22d3ee", "#3b82f6", "#ffffff", "#a78bfa"];
                    confetti({
                        particleCount: 150,
                        spread: 80,
                        origin: { y: 0.6 },
                        colors: colors,
                    });
                    setTimeout(() => {
                        confetti({
                            particleCount: 75,
                            angle: 60,
                            spread: 60,
                            origin: { x: 0 },
                            colors: colors,
                        });
                    }, 250);
                    setTimeout(() => {
                        confetti({
                            particleCount: 75,
                            angle: 120,
                            spread: 60,
                            origin: { x: 1 },
                            colors: colors,
                        });
                    }, 400);
                }
            }

            // --- Execution ---
            populateDynamicContent();
            setTimeout(celebrate, 500);
        };

        document.addEventListener("astro:page-load", initThankYouPage);
    </script>
</BaseLayout>
