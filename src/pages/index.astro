---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import ServicesHome from "../components/ServicesHome.astro";
import ServiceCards from "../components/ServiceCards.astro";
import GSAPNewTires from "../components/GSAPNewTires.astro";
import ProcessSteps from "../components/ProcessSteps.astro";
import ReviewsVideo from "../components/ReviewsVideo.astro";
import WhyChooseUs from "../components/WhyChooseUs.astro";
import FinancingSection from "../components/FinancingSection.astro";
import { mobileTiresBrand } from "../brands";
---

<BaseLayout
  brand={mobileTiresBrand}
  title="Queens Mobile Tires | We Come To You"
>
  <link
    rel="preload"
    as="video"
    href="/video/Queens-Elgin-Hero-2025.mp4"
    type="video/mp4"
    slot="head"
  />
  <link
    rel="preload"
    as="image"
    href="/images/shop/Queens-Auto-Banner-001.webp"
    slot="head"
  />
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "AutomotiveBusiness",
      "name": "Queens Mobile Tires",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Mobile Service",
        "addressLocality": "Chicago",
        "addressRegion": "IL",
        "postalCode": "60007",
        "addressCountry": "US"
      },
      "telephone": "+1-847-925-1100",
      "url": "https://queensmobiletires.com/"
    }
  </script>
  <Hero brand={mobileTiresBrand} />
  <ServiceCards />
  <GSAPNewTires />
  <FinancingSection />
  <WhyChooseUs />
  <ProcessSteps />
  <ReviewsVideo />
  <ServicesHome brand={mobileTiresBrand} />
</BaseLayout>
