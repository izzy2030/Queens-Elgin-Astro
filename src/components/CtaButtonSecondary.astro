---
interface Props {
  href?: string;
  text?: string;
  class?: string;
  reload?: boolean;
}

const {
  href = "/request-an-appointment",
  text = "Schedule Service",
  class: className = "",
  reload = false,
} = Astro.props;
---

<a
  href={href}
  data-astro-reload={reload || undefined}
  class:list={[
    "group inline-flex items-center gap-3 px-6 py-2.5 rounded-full font-bold text-sm transition-all duration-300 hover:scale-[1.03] active:scale-95 shadow-sm",
    "bg-white border border-gray-200 text-gray-900 hover:bg-gray-50 hover:border-gray-300", // Light Mode
    "dark:bg-queens-secondary-ultra-dark/40 dark:border-white/10 dark:text-white dark:hover:bg-queens-secondary-ultra-dark/60 dark:hover:border-white/20 dark:backdrop-blur-md", // Dark Mode
    className,
  ]}
>
  {text}
  <svg
    class="w-5 h-5 transition-transform duration-300 group-hover:rotate-45"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M7 17L17 7M17 7H7M17 7V17"></path>
  </svg>
</a>
