---
import ThemeToggle from "./ThemeToggle.astro";
import type { BrandConfig } from "../brands";

const { brand, inverse = false } = Astro.props as {
  brand: BrandConfig;
  inverse?: boolean;
};

const nameParts = brand.name.split(" ");
const firstName = nameParts[0];
const secondName = nameParts.length > 1 ? nameParts[1] : "";
---

<div
  class="absolute top-0 left-0 right-0 z-50 flex justify-center md:pt-6 md:px-4 pointer-events-none"
>
  <header
    id="main-nav"
    class={`pointer-events-auto relative tracking-tight flex items-center justify-between w-full transition-all duration-500
    /* Mobile Styles */
    px-6 py-4 bg-white/0 dark:bg-slate-900/0 border-b border-transparent
    /* Desktop Styles */
    md:rounded-full md:px-6 md:py-3 md:shadow-[0_8px_30px_rgb(0,0,0,0.04)] md:dark:shadow-[0_8px_30px_rgb(0,0,0,0.2)] md:border md:border-gray-100 md:dark:border-gray-800 md:max-w-6xl md:opacity-0 md:scale-[0.8]
    ${brand.logoPathWhite || "text-white"} 
    ${
      // If inverse (transparent on dark), remove desktop white bg/blur default, apply specifically if needed or keep transparent
      // Actually, for Arvora style, the desktop header might still want to be a "pill" or transparent?
      // User asked about "mobile hamburger menu".
      // Let's keep desktop behavior mostly same but allow text override.
      "md:bg-white/90 md:backdrop-blur-md md:dark:bg-slate-900/90"
    }`}
  >
    <!-- Logo -->
    <a
      href={`/`}
      class="group flex items-center gap-2 mr-auto md:mr-8 shrink-0"
    >
      {
        brand.logoPath && brand.logoPath.includes("New-Logo") ? (
          <>
            {/* Standard Logo - Shown in Light Mode */}
            <img
              src={brand.logoPath}
              alt={brand.name}
              class={`h-8 w-auto object-contain block ${brand.logoPathWhite ? "dark:hidden" : ""}`}
            />
            {/* White/Dark Mode Logo - Shown in Dark Mode */}
            {brand.logoPathWhite && (
              <img
                src={brand.logoPathWhite}
                alt={brand.name}
                class="h-8 w-auto object-contain hidden dark:block"
              />
            )}
          </>
        ) : (
          <span
            class={`text-xl font-bold tracking-tighter uppercase group-hover:text-queens-secondary transition-colors duration-300 ${inverse ? "text-white" : "text-queens-primary dark:text-white"}`}
          >
            {firstName}{" "}
            <span
              class={`group-hover:text-queens-primary transition-colors duration-300 ${inverse ? "text-queens-secondary" : "text-queens-secondary"}`}
            >
              {secondName}
            </span>
          </span>
        )
      }
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-1">
      <a
        href={`/`}
        data-astro-prefetch="hover"
        class={`text-sm font-medium hover:text-queens-secondary px-4 py-2 rounded-full hover:bg-gray-50 dark:hover:bg-slate-800 transition-all ${inverse ? "text-white/90 hover:text-white hover:bg-white/10" : "text-gray-600 dark:text-gray-300"}`}
        >Home</a
      >
      <a
        href={`/services`}
        data-astro-prefetch="hover"
        class={`text-sm font-medium hover:text-queens-secondary px-4 py-2 rounded-full hover:bg-gray-50 dark:hover:bg-slate-800 transition-all ${inverse ? "text-white/90 hover:text-white hover:bg-white/10" : "text-gray-600 dark:text-gray-300"}`}
        >Services</a
      >
      <a
        href={`/buy-new-tires`}
        data-astro-reload
        class={`text-sm font-medium hover:text-queens-secondary px-4 py-2 rounded-full hover:bg-gray-50 dark:hover:bg-slate-800 transition-all ${inverse ? "text-white/90 hover:text-white hover:bg-white/10" : "text-gray-600 dark:text-gray-300"}`}
        >New Tires</a
      >
      <a
        href={`/deals`}
        data-astro-prefetch="hover"
        class={`text-sm font-medium hover:text-queens-secondary px-4 py-2 rounded-full hover:bg-gray-50 dark:hover:bg-slate-800 transition-all ${inverse ? "text-white/90 hover:text-white hover:bg-white/10" : "text-gray-600 dark:text-gray-300"}`}
        >Deals</a
      >
      <a
        href={`/contact`}
        data-astro-prefetch="hover"
        class={`text-sm font-medium hover:text-queens-secondary px-4 py-2 rounded-full hover:bg-gray-50 dark:hover:bg-slate-800 transition-all ${inverse ? "text-white/90 hover:text-white hover:bg-white/10" : "text-gray-600 dark:text-gray-300"}`}
        >Contact</a
      >
    </nav>

    <!-- Right Side Actions -->
    <div class="flex items-center gap-3 ml-auto md:ml-0 pl-0 md:pl-0">
      <ThemeToggle inverse={inverse} />

      <a
        href={`/request-an-appointment`}
        class="hidden md:inline-flex items-center justify-center bg-queens-primary hover:bg-queens-secondary text-white text-sm font-bold px-6 py-2.5 rounded-full transition-all shadow-md hover:shadow-lg transform hover:-translate-y-0.5"
      >
        Book Appointment
      </a>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class={`md:hidden p-1 ${inverse ? "text-white hover:text-queens-secondary" : "text-queens-primary hover:text-queens-secondary dark:text-white dark:hover:text-queens-secondary"}`}
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-7 h-7"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>
  </header>
</div>

<!-- Mobile Menu Overlay -->
<div id="mobile-menu" class="fixed inset-0 z-[100] hidden md:hidden">
  <!-- Backdrop -->
  <div
    id="mobile-menu-backdrop"
    class="absolute inset-0 bg-black/20 backdrop-blur-sm"
  >
  </div>

  <!-- Menu Panel -->
  <div
    class="absolute top-4 right-4 left-4 bg-white dark:bg-slate-900 rounded-3xl shadow-2xl overflow-hidden animate-in fade-in slide-in-from-top-4 duration-200"
  >
    <div
      class="flex justify-between items-center p-6 border-b border-gray-100 dark:border-gray-800"
    >
      <span class="font-bold text-lg text-queens-primary dark:text-white"
        >Menu</span
      >
      <button
        id="mobile-menu-close"
        class="p-2 -mr-2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <nav class="p-4 flex flex-col space-y-2">
      <a
        href={`/`}
        class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-gray-50 dark:hover:bg-slate-800 text-gray-700 dark:text-gray-300 font-medium"
      >
        Home
      </a>
      <a
        href={`/services`}
        class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-gray-50 dark:hover:bg-slate-800 text-gray-700 dark:text-gray-300 font-medium"
      >
        Services
      </a>
      <a
        href={`/buy-new-tires`}
        data-astro-reload
        class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-gray-50 dark:hover:bg-slate-800 text-gray-700 dark:text-gray-300 font-medium"
      >
        New Tires
      </a>
      <a
        href={`/deals`}
        class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-gray-50 dark:hover:bg-slate-800 text-gray-700 dark:text-gray-300 font-medium"
      >
        Deals
      </a>
      <a
        href={`/contact`}
        class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-gray-50 dark:hover:bg-slate-800 text-gray-700 dark:text-gray-300 font-medium"
      >
        Contact
      </a>
    </nav>

    <div class="p-6 border-t border-gray-100 dark:border-gray-800">
      <a
        href={`/request-an-appointment`}
        class="w-full flex items-center justify-center bg-queens-primary hover:bg-queens-secondary text-white font-bold py-3 rounded-xl transition-colors"
      >
        Book Appointment
      </a>
    </div>
  </div>
</div>

<script>
  function setupHeader() {
    const nav = document.getElementById("main-nav");
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");
    const mobileMenuClose = document.getElementById("mobile-menu-close");
    const mobileMenuBackdrop = document.getElementById("mobile-menu-backdrop");

    if (!nav) return;

    // Trigger animation on load (Desktop only mostly, but safe to run)
    requestAnimationFrame(() => {
      // Only apply zoom/fade if existing classes allow (desktop has opacity-0 match)
      nav.classList.remove("md:opacity-0", "md:scale-[0.8]");
      nav.classList.add("md:opacity-100", "md:scale-100");
    });

    // Scroll Logic Removed for Static Header
    /* 
    const updateHeaderStyle = () => {
       // ... Logic removed to keep header static/absolute ...
    }; 
    */

    if (!mobileMenuButton || !mobileMenu) return;

    const openMobileMenu = () => {
      mobileMenu.classList.remove("hidden");
      document.body.style.overflow = "hidden";
    };

    const closeMobileMenu = () => {
      mobileMenu.classList.add("hidden");
      document.body.style.overflow = "";
    };

    mobileMenuButton.addEventListener("click", openMobileMenu);
    mobileMenuClose?.addEventListener("click", closeMobileMenu);
    mobileMenuBackdrop?.addEventListener("click", closeMobileMenu);

    // Close menu when clicking a nav link
    mobileMenu.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", closeMobileMenu);
    });

    // window.addEventListener("scroll", updateHeaderStyle);

    // Clean up on page swap
    document.addEventListener(
      "astro:before-swap",
      () => {
        closeMobileMenu();
        // window.removeEventListener("scroll", updateHeaderStyle);
      },
      { once: true },
    );

    // Initial check
    // updateHeaderStyle();
  }

  // Run on initial load
  setupHeader();

  // Run on view transitions
  document.addEventListener("astro:page-load", setupHeader);
</script>
