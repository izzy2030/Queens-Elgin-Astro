---
import type { BrandConfig } from "../brands";
import { mobileTiresBrand } from "../brands";
import CtaButton from "./CtaButton.astro";
import CtaButtonSecondary from "./CtaButtonSecondary.astro";

const { brand = mobileTiresBrand } = Astro.props as { brand?: BrandConfig };

const avatars = [
  "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?q=80&w=100&h=100&auto=format&fit=crop",
  "https://images.unsplash.com/photo-1494790108377-be9c29b29330?q=80&w=100&h=100&auto=format&fit=crop",
  "https://images.unsplash.com/photo-1599566150163-29194dcaad36?q=80&w=100&h=100&auto=format&fit=crop",
  "https://images.unsplash.com/photo-1580489944761-15a19d654956?q=80&w=100&h=100&auto=format&fit=crop",
];
---

<section
  class="relative bg-page transition-colors duration-500 pt-32 pb-20 sm:pt-44 sm:pb-32 overflow-hidden"
>
  <!-- Modern Animated Background Blobs -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div
      class="absolute top-[-10%] -right-[10%] w-[600px] h-[600px] bg-queens-secondary/10 dark:bg-queens-secondary/5 rounded-full blur-[120px] animate-blob"
    >
    </div>
    <div
      class="absolute bottom-[0%] -left-[10%] w-[500px] h-[500px] bg-queens-primary/5 dark:bg-white/5 rounded-full blur-[100px] animate-blob animation-delay-2000"
    >
    </div>
    <div
      class="absolute top-[20%] left-[20%] w-[300px] h-[300px] bg-queens-secondary/5 rounded-full blur-[80px] animate-blob animation-delay-4000"
    >
    </div>
  </div>

  <div class="site-canvas relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-20 items-center">
      <!-- Left Column: Content (7 cols) -->
      <div class="lg:col-span-7 flex flex-col items-start text-left">
        <!-- Badge -->
        <div
          class="inline-flex items-center gap-2.5 px-4 py-1.5 rounded-full bg-queens-secondary-ultra-light dark:bg-queens-secondary-darker border border-queens-secondary-light dark:border-queens-secondary-dark text-queens-secondary-darker dark:text-queens-secondary-ultra-light text-[10px] sm:text-xs font-bold uppercase tracking-[0.2em] mb-8 animate-fade-in"
        >
          <span class="relative flex h-2 w-2">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-queens-secondary dark:bg-queens-secondary-ultra-light opacity-75"
            ></span>
            <span
              class="relative inline-flex rounded-full h-2 w-2 bg-queens-secondary dark:bg-queens-secondary-ultra-light"
            ></span>
          </span>
          Elgin's Trusted Auto Experts Since 2014
        </div>

        <!-- Headline -->
        <h1
          class="text-5xl md:text-7xl xl:text-8xl font-sans font-bold text-queens-primary dark:text-white mb-8 leading-[1.02] tracking-tight"
        >
          Your Local Expert for <br />
          <span
            class="text-queens-secondary font-yellowtail font-normal italic lowercase pt-2 block sm:inline"
            >Tires & Auto Repair.</span
          >
        </h1>

        <!-- Description -->
        <p
          class="text-lg md:text-xl text-gray-600 dark:text-gray-300 mb-12 max-w-xl leading-relaxed font-manrope"
        >
          Visit Queens Auto Services in Elgin for professional tire installation
          and comprehensive auto repair. We keep you rolling with trusted
          service and top-tier equipment.
        </p>

        <!-- Buttons -->
        <div class="flex flex-wrap gap-5 mb-20">
          <CtaButton href="/request-an-appointment" text="Book Appointment" />
          <CtaButtonSecondary href="#homepage-deals" text="See Our Deals" />
        </div>

        <!-- Social Proof -->
        <div
          class="flex flex-wrap items-center gap-12 border-t border-gray-100 dark:border-white/10 pt-12 w-full"
        >
          <!-- Rated Excellent -->
          <div class="flex flex-col gap-3">
            <div class="flex items-center gap-1">
              {
                [1, 2, 3, 4, 5].map(() => (
                  <svg
                    class="w-5 h-5 text-amber-400 fill-current drop-shadow-sm"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))
              }
            </div>
            <p
              class="text-sm font-bold text-queens-primary dark:text-white uppercase tracking-wider"
            >
              Excellent <span class="text-gray-400 font-medium ml-1"
                >Rating</span
              >
            </p>
          </div>

          <div class="h-12 w-px bg-gray-200 dark:bg-white/10 hidden sm:block">
          </div>

          <!-- Happy Customers -->
          <div class="flex flex-col gap-3">
            <div class="flex -space-x-3.5">
              {
                avatars.map((url, i) => (
                  <img
                    class="w-11 h-11 rounded-full border-2 border-white dark:border-gray-950 object-cover shadow-md transition-all hover:scale-110 hover:z-10 hover:ring-4 hover:ring-queens-secondary/20"
                    src={url}
                    alt={`Happy Customer ${i + 1}`}
                  />
                ))
              }
              <div
                class="w-11 h-11 rounded-full border-2 border-white dark:border-gray-950 bg-queens-primary text-white flex items-center justify-center text-[10px] font-black shadow-md z-10"
              >
                1K+
              </div>
            </div>
            <p
              class="text-sm font-bold text-queens-primary dark:text-white uppercase tracking-wider"
            >
              1,000+ <span class="text-gray-400 font-medium ml-1"
                >Daily Stops</span
              >
            </p>
          </div>
        </div>
      </div>

      <!-- Right Column: Video/Image Card (5 cols) -->
      <div class="lg:col-span-5 relative group">
        <div
          class="relative rounded-[3rem] overflow-hidden shadow-[0_32px_64px_-16px_rgba(0,0,0,0.3)] dark:shadow-[0_32px_64px_-16px_rgba(0,0,0,0.6)] aspect-[4/5] lg:aspect-[5/6] transform hover:scale-[1.01] transition-all duration-700 ease-in-out"
        >
          <video
            id="hero-video"
            autoplay
            loop
            muted
            playsinline
            poster="https://storage.googleapis.com/queens-videos/Queens%20Webiste%20Store%20Front%20.png"
            class="w-full h-full object-cover scale-[1.02] group-hover:scale-110 transition-transform duration-[2s] ease-out"
          >
            <source
              src="https://storage.googleapis.com/queens-videos/queensintro.mp4"
              type="video/mp4"
            />
          </video>

          <!-- Premium Notification Card -->
          <div
            class="absolute bottom-8 left-6 right-6 sm:bottom-10 sm:left-8 sm:right-8 group/notify"
          >
            <div
              class="bg-white/70 dark:bg-gray-900/60 backdrop-blur-2xl p-5 sm:p-6 rounded-[2rem] border border-white/40 dark:border-white/10 shadow-2xl flex items-center gap-5 transform translate-y-2 group-hover:translate-y-0 transition-all duration-700 ease-out group-hover:bg-white/80 dark:group-hover:bg-gray-900/80"
            >
              <div
                class="relative w-14 h-14 rounded-2xl bg-queens-primary flex items-center justify-center text-white shadow-xl group-hover/notify:scale-110 transition-transform"
              >
                <svg
                  class="w-7 h-7"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg
                >
                <span class="absolute -top-1 -right-1 flex h-4 w-4">
                  <span
                    class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"
                  ></span>
                  <span
                    class="relative inline-flex rounded-full h-4 w-4 bg-green-500 scale-75"
                  ></span>
                </span>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex justify-between items-center mb-1">
                  <p
                    class="text-base font-bold text-queens-primary dark:text-white truncate"
                  >
                    Queens Mobile Live
                  </p>
                  <span
                    class="text-[9px] text-queens-secondary dark:text-queens-light font-black uppercase tracking-widest bg-queens-secondary/10 dark:bg-queens-secondary/20 px-2 py-0.5 rounded-full"
                    >Active</span
                  >
                </div>
                <p
                  class="text-xs text-gray-600 dark:text-gray-300 font-medium leading-relaxed font-manrope"
                >
                  Mobile units currently servicing Elgin, Hoffman Estates &
                  South Elgin area.
                </p>
              </div>
            </div>
          </div>

          <!-- Enhanced Gradients -->
          <div
            class="absolute inset-x-0 bottom-0 h-2/3 bg-gradient-to-t from-black/80 via-black/20 to-transparent pointer-events-none opacity-80"
          >
          </div>
          <div
            class="absolute inset-0 ring-1 ring-inset ring-white/20 rounded-[3rem] pointer-events-none"
          >
          </div>
        </div>

        <!-- Side Tag - Refined -->
        <div
          class="absolute -right-16 top-1/2 -translate-y-1/2 translate-x-1/2 -rotate-90 hidden xl:block pointer-events-none"
        >
          <span
            class="text-[11px] font-black uppercase tracking-[0.5em] text-gray-400/30 dark:text-white/10 select-none whitespace-nowrap"
            >ELGIN • HOFFMAN ESTATES • SOUTH ELGIN</span
          >
        </div>

        <!-- Decorative UI Element -->
        <div
          class="absolute -top-10 -left-10 w-40 h-40 bg-queens-secondary/10 rounded-full blur-3xl group-hover:bg-queens-secondary/20 transition-colors duration-700"
        >
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  .animate-blob {
    animation: blob 7s infinite alternate;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>
