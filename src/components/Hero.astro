---
import type { BrandConfig } from "../brands";
import { mobileTiresBrand } from "../brands";
import CtaButton from "./CtaButton.astro";
import CtaButtonSecondary from "./CtaButtonSecondary.astro";

const { brand = mobileTiresBrand } = Astro.props as { brand?: BrandConfig };

const avatars = [
  "/images/reviewers/Andres Rivera.webp",
  "/images/reviewers/Sarah Pavao.webp",
  "/images/reviewers/Chris Muller.webp",
  "/images/reviewers/Jarintzy Ramirez.webp",
];
---

<section
  class="relative bg-page transition-colors duration-500 pt-32 pb-20 sm:pt-44 sm:pb-32 overflow-hidden"
>
  <!-- Modern Animated Background Blobs -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div
      class="absolute top-[-10%] -right-[10%] w-[600px] h-[600px] bg-queens-secondary/10 dark:bg-queens-secondary/5 rounded-full blur-[120px] animate-blob"
    >
    </div>
    <div
      class="absolute bottom-[0%] -left-[10%] w-[500px] h-[500px] bg-queens-primary/5 dark:bg-white/5 rounded-full blur-[100px] animate-blob animation-delay-2000"
    >
    </div>
    <div
      class="absolute top-[20%] left-[20%] w-[300px] h-[300px] bg-queens-secondary/5 rounded-full blur-[80px] animate-blob animation-delay-4000"
    >
    </div>
  </div>

  <div class="site-canvas relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-20 items-center">
      <!-- Left Column: Content (7 cols) -->
      <div class="lg:col-span-7 flex flex-col items-start text-left">
        <!-- Badge -->
        <div
          class="inline-flex items-center gap-2.5 px-4 py-1.5 rounded-full bg-queens-secondary-ultra-light dark:bg-queens-secondary-darker border border-queens-secondary-light dark:border-queens-secondary-dark text-queens-secondary-darker dark:text-queens-secondary-ultra-light text-[10px] sm:text-xs font-bold uppercase tracking-[0.2em] mb-8 hero-eyebrow"
        >
          <span class="relative flex h-2 w-2">
            <span
              class="animate-ping absolute inline-flex h-full w-full rounded-full bg-queens-secondary dark:bg-queens-secondary-ultra-light opacity-75"
            ></span>
            <span
              class="relative inline-flex rounded-full h-2 w-2 bg-queens-secondary dark:bg-queens-secondary-ultra-light"
            ></span>
          </span>
          Elgin's Trusted Auto Experts Since 2007
        </div>

        <!-- Headline -->
        <h1 class="display-hero-home text-queens-primary dark:text-white mb-8">
          <span class="block">Your Local Expert for</span>
          <span class="block text-queens-secondary pt-2"
            >Tires & Auto Repair.</span
          >
        </h1>

        <p
          class="text-lg md:text-xl text-gray-600 dark:text-gray-300 mb-12 max-w-xl leading-relaxed"
        >
          Visit Queens Auto Services in Elgin for professional tire installation
          and comprehensive auto repair. We keep you rolling with trusted
          service and top-tier equipment.
        </p>

        <div class="flex flex-wrap gap-5 mb-20">
          <CtaButton href="/request-an-appointment" text="Book Appointment" />
          <CtaButtonSecondary href="#homepage-deals" text="See Our Deals" />
        </div>

        <div
          class="flex flex-wrap items-center gap-12 border-t border-gray-100 dark:border-white/10 pt-12 w-full"
        >
          <!-- Rated Excellent -->
          <div class="flex flex-col gap-3">
            <div class="flex items-center gap-1">
              {
                [1, 2, 3, 4].map(() => (
                  <svg
                    class="w-5 h-5 text-amber-400 fill-current drop-shadow-sm"
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))
              }
              <div class="relative w-5 h-5 overflow-hidden">
                <svg
                  class="absolute text-gray-300 dark:text-gray-700 fill-current w-5 h-5"
                  viewBox="0 0 20 20"
                >
                  <path
                    d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                  ></path>
                </svg>
                <div class="absolute w-[50%] h-full overflow-hidden">
                  <svg
                    class="text-amber-400 fill-current w-5 h-5"
                    viewBox="0 0 20 20"
                  >
                    <path
                      d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                    ></path>
                  </svg>
                </div>
              </div>
            </div>
            <p
              class="text-sm font-bold text-queens-primary dark:text-white uppercase tracking-wider"
            >
              4.5/5 Avg <span class="text-gray-400 font-medium ml-1"
                >Rating</span
              >
            </p>
          </div>

          <div class="h-12 w-px bg-gray-200 dark:bg-white/10 hidden sm:block">
          </div>

          <!-- Happy Customers -->
          <div class="flex flex-col gap-3">
            <div class="flex -space-x-3.5">
              {
                avatars.map((url, i) => (
                  <img
                    class="w-11 h-11 rounded-full border-2 border-white dark:border-gray-950 object-cover shadow-md transition-all hover:scale-110 hover:z-10 hover:ring-4 hover:ring-queens-secondary/20"
                    src={url}
                    alt={`Happy Customer ${i + 1}`}
                  />
                ))
              }
              <div
                class="w-11 h-11 rounded-full border-2 border-white dark:border-gray-950 bg-queens-primary text-white flex items-center justify-center text-[10px] font-black shadow-md z-10"
              >
                1K+
              </div>
            </div>
            <p
              class="text-sm font-bold text-queens-primary dark:text-white uppercase tracking-wider"
            >
              1,000+ <span class="text-gray-400 font-medium ml-1"
                >Happy Customers</span
              >
            </p>
          </div>
        </div>
      </div>

      <!-- Right Column: Video/Image Card (5 cols) -->
      <div
        class="lg:col-span-5 relative group flex flex-col gap-6 -mt-8 lg:-mt-12 xl:-mt-20"
      >
        <div
          class="relative rounded-[3rem] overflow-hidden aspect-[4/5] lg:aspect-[5/6] transform hover:scale-[1.01] transition-all duration-700 ease-in-out hero-video-container"
        >
          <video
            id="hero-video"
            autoplay
            loop
            muted
            playsinline
            preload="auto"
            poster="/images/shop/Queens-Auto-Banner-001.webp"
            class="w-full h-full object-cover scale-[1.02] group-hover:scale-110 transition-transform duration-[2s] ease-out hero-video-reveal"
            style="clip-path: inset(0 0 100% 0);"
          >
            <source src="/video/Queens-Elgin-Hero-2025.mp4" type="video/mp4" />
          </video>

          <!-- Premium Notification Card - Tire Promotion -->
          <div
            class="absolute bottom-8 left-6 right-6 sm:bottom-10 sm:left-8 sm:right-8 group/notify hero-notification-card"
          >
            <div
              class="bg-white/70 dark:bg-gray-900/60 backdrop-blur-2xl p-5 sm:p-6 rounded-[2rem] border border-white/40 dark:border-white/10 shadow-2xl flex items-center gap-5 transform translate-y-2 group-hover:translate-y-0 transition-all duration-700 ease-out group-hover:bg-white/80 dark:group-hover:bg-gray-900/80"
            >
              <div
                class="relative w-14 h-14 rounded-2xl bg-queens-secondary flex items-center justify-center text-white shadow-xl group-hover/notify:scale-110 transition-transform"
              >
                <!-- Tire/Wheel Icon -->
                <svg
                  class="w-7 h-7"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                >
                  <circle cx="12" cy="12" r="9" stroke-linecap="round"></circle>
                  <circle cx="12" cy="12" r="4" stroke-linecap="round"></circle>
                  <line x1="12" y1="3" x2="12" y2="8" stroke-linecap="round"
                  ></line>
                  <line x1="12" y1="16" x2="12" y2="21" stroke-linecap="round"
                  ></line>
                  <line x1="3" y1="12" x2="8" y2="12" stroke-linecap="round"
                  ></line>
                  <line x1="16" y1="12" x2="21" y2="12" stroke-linecap="round"
                  ></line>
                </svg>
                <span class="absolute -top-1 -right-1 flex h-4 w-4">
                  <span
                    class="animate-ping absolute inline-flex h-full w-full rounded-full bg-queens-secondary-light opacity-75"
                  ></span>
                  <span
                    class="relative inline-flex rounded-full h-4 w-4 bg-queens-secondary scale-75"
                  ></span>
                </span>
              </div>
              <div class="flex-1 min-w-0">
                <div
                  class="flex flex-col xs:flex-row xs:items-center justify-between gap-1 xs:gap-4 mb-1"
                >
                  <p
                    class="text-sm sm:text-base font-bold text-queens-primary dark:text-white"
                  >
                    New Tires in Stock
                  </p>
                  <span
                    class="w-fit text-[9px] text-green-600 dark:text-green-400 font-black uppercase tracking-widest bg-green-500/10 dark:bg-green-500/20 px-2 py-0.5 rounded-full"
                    >In Stock</span
                  >
                </div>
                <p
                  class="text-xs text-gray-600 dark:text-gray-300 font-medium leading-relaxed"
                >
                  Top brands ready for same-day installation. No appointment
                  needed.
                </p>
              </div>
            </div>
          </div>

          <!-- Enhanced Gradients -->
          <div
            class="absolute inset-x-0 bottom-0 h-2/3 bg-gradient-to-t from-black/80 via-black/20 to-transparent pointer-events-none hero-video-gradient"
          >
          </div>
          <div
            class="absolute inset-0 ring-1 ring-inset ring-white/20 rounded-[3rem] pointer-events-none hero-video-ring"
          >
          </div>
        </div>

        <!-- Trust Stat (Simplified & Dynamic Counter) -->
        <div class="mt-4 sm:mt-6">
          <div class="flex items-center gap-5 sm:gap-8">
            <!-- The Big Number -->
            <div class="flex items-baseline gap-1">
              <span
                id="hero-counter"
                class="display-lg text-queens-primary dark:text-white"
                data-target="25000">0</span
              >
              <span
                class="display-md text-queens-secondary dark:text-queens-secondary-light"
                >+</span
              >
            </div>

            <!-- Divider -->
            <div class="h-12 w-px bg-gray-200 dark:bg-white/10"></div>

            <!-- Text Block -->
            <div class="flex flex-col">
              <span
                class="text-xs sm:text-sm font-black uppercase tracking-[0.15em] text-queens-primary dark:text-white mb-1"
                >Local Neighbors Served</span
              >
              <div class="flex items-center gap-1.5">
                <span class="relative flex h-2 w-2">
                  <span
                    class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"
                  ></span>
                  <span
                    class="relative inline-flex rounded-full h-2 w-2 bg-green-500"
                  ></span>
                </span>
                <span
                  class="text-[10px] font-semibold text-gray-400 dark:text-gray-500 uppercase tracking-wider"
                  >Serving Elgin since 2007</span
                >
              </div>
            </div>
          </div>
        </div>

        <!-- Side Tag - Refined -->
        <div
          class="absolute -right-16 top-1/2 -translate-y-1/2 translate-x-1/2 -rotate-90 hidden xl:block pointer-events-none"
        >
          <span
            class="text-[11px] font-black uppercase tracking-[0.5em] text-gray-400/30 dark:text-white/10 select-none whitespace-nowrap"
            >ELGIN • HOFFMAN ESTATES • SOUTH ELGIN</span
          >
        </div>

        <!-- Decorative UI Element -->
        <div
          class="absolute -top-10 -left-10 w-40 h-40 bg-queens-secondary/10 rounded-full blur-3xl group-hover:bg-queens-secondary/20 transition-colors duration-700"
        >
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Only these elements should have delayed entrance animations */
  .hero-eyebrow,
  .hero-notification-card {
    opacity: 0;
  }

  /* Video overlays start hidden until video reveals */
  .hero-video-gradient,
  .hero-video-ring {
    opacity: 0;
  }

  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  .animate-blob {
    animation: blob 7s infinite alternate;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  function initHeroAnimations() {
    // --- Eyebrow (Badge) Fade In with 2s delay ---
    const eyebrow = document.querySelector(".hero-eyebrow");
    if (eyebrow) {
      gsap.to(eyebrow, {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: "power2.out",
        delay: 2.0,
      });
    }

    // Headline and social items now appear immediately (no animation delay)

    // --- Counter Animation ---
    const counter = document.getElementById("hero-counter");
    if (counter) {
      const target = parseInt(counter.getAttribute("data-target") || "0");
      const animation = { value: 0 };

      gsap.to(animation, {
        value: target,
        duration: 2.5,
        ease: "power4.out",
        scrollTrigger: {
          trigger: counter,
          start: "top 90%",
          once: true,
        },
        onUpdate: () => {
          counter.textContent = Math.floor(animation.value).toLocaleString();
        },
      });
    }

    // --- Hero Video Reveal (Roll Down Effect) ---
    const heroVideo = document.querySelector(".hero-video-reveal");
    const heroGradient = document.querySelector(".hero-video-gradient");
    const heroContainer = document.querySelector(".hero-video-container");
    const heroRing = document.querySelector(".hero-video-ring");
    const notificationCard = document.querySelector(".hero-notification-card");

    const isMobile = window.innerWidth < 1024;

    if (heroVideo) {
      if (isMobile) {
        // Mobile: Use ScrollTrigger since video is below fold
        gsap.to(heroVideo, {
          clipPath: "inset(0 0 0% 0)",
          duration: 1.2,
          ease: "power2.out",
          scrollTrigger: {
            trigger: heroVideo,
            start: "top 60%",
            once: true,
          },
        });

        // Fade in overlays after video reveal on mobile
        const mobileOverlays = [
          heroGradient,
          heroRing,
          notificationCard,
        ].filter(Boolean);
        mobileOverlays.forEach((el) => {
          gsap.to(el, {
            opacity: el === heroGradient ? 0.8 : 1,
            duration: 0.6,
            ease: "power2.out",
            scrollTrigger: {
              trigger: heroVideo,
              start: "top 50%",
              once: true,
            },
          });
        });

        // Shadow on mobile
        if (heroContainer) {
          gsap.to(heroContainer, {
            boxShadow: "0 32px 64px -16px rgba(0,0,0,0.3)",
            duration: 0.8,
            ease: "power2.out",
            scrollTrigger: {
              trigger: heroVideo,
              start: "top 50%",
              once: true,
            },
          });
        }
      } else {
        // Desktop: Quick video reveal
        gsap.to(heroVideo, {
          clipPath: "inset(0 0 0% 0)",
          duration: 1.0,
          ease: "power2.out",
          delay: 0.3,
        });

        // Fade in the gradient overlay shortly after video starts
        if (heroGradient) {
          gsap.to(heroGradient, {
            opacity: 0.8,
            duration: 0.6,
            ease: "power2.out",
            delay: 0.8,
          });
        }

        // Add shadow to container
        if (heroContainer) {
          gsap.to(heroContainer, {
            boxShadow: "0 32px 64px -16px rgba(0,0,0,0.3)",
            duration: 0.8,
            ease: "power2.out",
            delay: 0.8,
          });
        }

        // Fade in the ring overlay
        if (heroRing) {
          gsap.to(heroRing, {
            opacity: 1,
            duration: 0.6,
            ease: "power2.out",
            delay: 0.8,
          });
        }

        // Fade in the notification card with 2 second delay (intentionally delayed)
        if (notificationCard) {
          gsap.to(notificationCard, {
            opacity: 1,
            y: 0,
            duration: 0.8,
            ease: "power2.out",
            delay: 2.0,
          });
        }
      }
    }
  }

  // Use ONLY astro:page-load as it handles both initial load and transitions correctly
  document.addEventListener("astro:page-load", initHeroAnimations);
</script>
