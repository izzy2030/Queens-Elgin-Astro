---
/**
 * Commitment Section - "Why Choose Us" / Peace of Mind
 * Premium asymmetric bento layout with theme support
 * Inspired by modern SaaS landing pages
 */
---

<section class="why-section">
    <div class="why-container">
        <!-- Top Row: Badge + Headline -->
        <div class="why-header">
            <div class="why-badge-col">
                <span class="why-badge">Why choose us</span>
            </div>
            <div class="why-headline-col">
                <h2 class="why-headline">
                    Building trust through<br />
                    <span class="headline-emphasis"
                        >excellence & transparency</span
                    >
                </h2>
            </div>
        </div>

        <!-- Bento Grid -->
        <div class="bento-grid">
            <!-- Left Column: Stat Card -->
            <div class="bento-card bento-stat-card">
                <div class="stat-image-wrapper">
                    <img
                        src="/images/services/Mechanic-Changing-Tire.webp"
                        alt="Mechanic changing tire"
                        loading="lazy"
                    />
                </div>
                <div class="stat-content">
                    <div class="stat-number">
                        25k<span class="stat-plus">+</span>
                    </div>
                    <div class="stat-title">Happy customers</div>
                    <p class="stat-desc">
                        Providing <span class="text-accent">brake repairs</span
                        >,
                        <span class="text-accent">tire services</span>, or
                        <span class="text-accent">full auto care</span>
                    </p>
                    <div class="stat-footer">
                        <a href="/request-an-appointment" class="stat-cta">
                            Get in touch
                        </a>
                        <div class="avatar-stack">
                            <div
                                class="avatar"
                                style="background: linear-gradient(135deg, #3b82f6, #22d3ee);"
                            >
                            </div>
                            <div
                                class="avatar"
                                style="background: linear-gradient(135deg, #f97316, #eab308);"
                            >
                            </div>
                            <div
                                class="avatar"
                                style="background: linear-gradient(135deg, #8b5cf6, #ec4899);"
                            >
                            </div>
                        </div>
                        <span class="avatar-label">Queens Auto</span>
                    </div>
                </div>
            </div>

            <!-- Right Column: Image with Overlay Stat -->
            <div class="bento-card bento-image-card">
                <img
                    src="/images/shop/Queens-Auto-Services-Elgin-Front-View-Shop-001.webp"
                    alt="Queens Auto Services shop front"
                    loading="lazy"
                />
                <div class="image-stat-overlay">
                    <div class="overlay-stat">
                        4.5<span class="stat-star">★</span>
                    </div>
                    <div class="overlay-label">Average rating</div>
                </div>
            </div>

            <!-- Bottom Left: Warranty Badge -->
            <div class="bento-card bento-warranty-card">
                <div class="warranty-icon">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="48"
                        height="48"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"
                        ></path>
                        <polyline points="9 12 11 14 15 10"></polyline>
                    </svg>
                </div>
                <div class="warranty-content">
                    <div class="warranty-title">24-Month Warranty</div>
                    <div class="warranty-subtitle">
                        24,000 miles • Nationwide coverage
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Section Container */
        .why-section {
            --section-bg: #fafafa;
            --card-bg: #ffffff;
            --card-border: rgba(0, 0, 0, 0.06);
            --text-primary: #0f172a;
            --text-secondary: #64748b;
            --accent: #0a79c8;

            background: var(--section-bg);
            padding: 6rem 1.5rem;
            position: relative;
        }

        :global(.dark) .why-section {
            --section-bg: #0a0a0b;
            --card-bg: rgba(255, 255, 255, 0.03);
            --card-border: rgba(255, 255, 255, 0.08);
            --text-primary: #f8fafc;
            --text-secondary: #94a3b8;
            --accent: #22d3ee;
        }

        .why-container {
            max-width: 1280px;
            margin: 0 auto;
        }

        /* Header Row */
        .why-header {
            display: grid;
            grid-template-columns: auto 1fr;
            gap: 4rem;
            align-items: start;
            margin-bottom: 4rem;
        }

        .why-badge {
            display: inline-block;
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--text-secondary);
            border: 1px solid var(--card-border);
            padding: 0.625rem 1.25rem;
            border-radius: 100px;
            background: var(--card-bg);
        }

        .why-headline {
            font-family: var(--font-display);
            font-size: clamp(2rem, 4vw + 0.5rem, 3.25rem);
            font-weight: 800;
            color: var(--text-primary);
            line-height: 1.05;
            margin: 0;
            letter-spacing: -0.01em;
            text-transform: uppercase;
        }

        .headline-emphasis {
            color: var(--text-secondary);
        }

        /* Bento Grid */
        .bento-grid {
            display: grid;
            grid-template-columns: 1.2fr 1fr;
            grid-template-rows: auto auto;
            gap: 1.5rem;
        }

        .bento-card {
            border-radius: 1.5rem;
            overflow: hidden;
            transition:
                transform 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                box-shadow 0.4s ease;
        }

        .bento-card:hover {
            transform: translateY(-4px);
        }

        /* Stat Card (Left) */
        .bento-stat-card {
            background: var(--card-bg);
            border: 1px solid var(--card-border);
            display: grid;
            grid-template-columns: 180px 1fr;
            gap: 0;
            grid-row: span 1;
        }

        .stat-image-wrapper {
            position: relative;
            overflow: hidden;
        }

        .stat-image-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: saturate(0.9);
        }

        .stat-content {
            padding: 2rem;
            display: flex;
            flex-direction: column;
        }

        .stat-number {
            font-size: 4rem;
            font-weight: 700;
            color: var(--text-primary);
            line-height: 1;
            letter-spacing: -0.03em;
        }

        .stat-plus {
            color: var(--accent);
        }

        .stat-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-top: 0.25rem;
        }

        .stat-desc {
            font-size: 0.9375rem;
            color: var(--text-secondary);
            margin: 1rem 0;
            line-height: 1.6;
        }

        .text-accent {
            color: var(--accent);
        }

        .stat-footer {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-top: auto;
            padding-top: 1.5rem;
            border-top: 1px solid var(--card-border);
        }

        .stat-cta {
            display: inline-flex;
            align-items: center;
            background: var(--text-primary);
            color: var(--section-bg);
            font-size: 0.875rem;
            font-weight: 500;
            padding: 0.75rem 1.25rem;
            border-radius: 100px;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        :global(.dark) .stat-cta {
            background: #ffffff;
            color: #0a0a0b;
        }

        .stat-cta:hover {
            transform: scale(1.05);
        }

        .avatar-stack {
            display: flex;
            margin-left: auto;
        }

        .avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            border: 2px solid var(--card-bg);
            margin-left: -8px;
        }

        .avatar:first-child {
            margin-left: 0;
        }

        .avatar-label {
            font-size: 0.875rem;
            font-weight: 500;
            color: var(--text-secondary);
            margin-left: 0.5rem;
        }

        /* Image Card (Right) */
        .bento-image-card {
            position: relative;
            grid-row: span 2;
            min-height: 400px;
        }

        .bento-image-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .image-stat-overlay {
            position: absolute;
            bottom: 2rem;
            left: 2rem;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(12px);
            padding: 1.25rem 2rem;
            border-radius: 1rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        }

        :global(.dark) .image-stat-overlay {
            background: rgba(20, 21, 23, 0.9);
        }

        .overlay-stat {
            font-size: 2.5rem;
            font-weight: 700;
            color: #0f172a;
            line-height: 1;
        }

        :global(.dark) .overlay-stat {
            color: #f8fafc;
        }

        .stat-star {
            color: #fbbf24;
            font-size: 0.8em;
            margin-left: 0.25rem;
        }

        .overlay-label {
            font-size: 0.9375rem;
            color: #64748b;
            margin-top: 0.25rem;
        }

        :global(.dark) .overlay-label {
            color: #94a3b8;
        }

        /* Warranty Card (Bottom Left) */
        .bento-warranty-card {
            background: linear-gradient(135deg, #0a79c8 0%, #22d3ee 100%);
            padding: 2rem;
            display: flex;
            align-items: center;
            gap: 1.5rem;
            color: white;
        }

        .warranty-icon {
            flex-shrink: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 72px;
            height: 72px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 1rem;
        }

        .warranty-title {
            font-size: 1.5rem;
            font-weight: 700;
        }

        .warranty-subtitle {
            font-size: 0.9375rem;
            opacity: 0.9;
            margin-top: 0.25rem;
        }

        /* Responsive */
        @media (max-width: 1024px) {
            .why-header {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }

            .bento-grid {
                grid-template-columns: 1fr;
            }

            .bento-stat-card {
                grid-template-columns: 1fr;
            }

            .stat-image-wrapper {
                height: 200px;
            }

            .bento-image-card {
                grid-row: span 1;
                min-height: 300px;
            }
        }

        @media (min-width: 1025px) {
            .bento-warranty-card {
                grid-column: 1;
            }
        }

        @media (max-width: 640px) {
            .why-section {
                padding: 4rem 1rem;
            }

            .stat-number {
                font-size: 3rem;
            }

            .stat-footer {
                flex-wrap: wrap;
            }

            .avatar-stack {
                margin-left: 0;
            }

            .bento-warranty-card {
                flex-direction: column;
                text-align: center;
            }
        }
    </style>
</section>
